<h1>Public::NextMedicalCheckupDateList#index</h1>
<p>Find me in app/views/public/next_medical_checkup_date_list/index.html.erb</p>
<h2>次回受診日</h2>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @next_medical_checkup_date_list.each do |t| %>
      <tr>
        <td><%= t.title %></td>
        <td><%= t.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%#= link_to '詳細', t %></td>
        <td><%= link_to '編集', edit_next_medical_checkup_date_list_path(t.id) %></td>
        <td><%= link_to '削除',next_medical_checkup_date_list_path(t.id), method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'カレンダーを書く', new_next_medical_checkup_date_list_path %>

<%= month_calendar events: @next_medical_checkup_date_list do |date, next_medical_checkup_date_list| %>
  <%= date.day %>

  <% next_medical_checkup_date_list.each do |next_medical_checkup_date_list| %>
    <div>
      <%= link_to next_medical_checkup_date_list.title, next_medical_checkup_date_list %>
    </div>
  <% end %>
<% end %>