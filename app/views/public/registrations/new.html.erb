<h2>見本は</h2>
<div><%= link_to "こちら", customers_guest_path %>をクリックしてください。</div>


<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>


  <%= render "public/shared/error_messages", resource: @customer %>




  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（６文字以上） %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用）%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>


   <h2>既に登録済の方</h2>
       <div><%= link_to "こちら", new_customer_session_path %>からログインしてください。</div>

