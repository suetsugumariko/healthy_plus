<h2>会員情報編集 <%#= resource_name.to_s.humanize %></h2>




<h4>会員情報編集</h4>

<%= form_with(model: @customer, url: customers_edit_path, local: true) do |f| %>

  <h4>名前</h4>
  姓<%= f.text_field :last_name %>名<%= f.text_field :first_name %>
  セイ<%= f.text_field :last_name_kana %>メイ<%= f.text_field :first_name_kana %>
  <h4>メールアドレス</h4>
  <%= f.email_field :email %>

  <h4>パスワード</h4>
  <%= f.password_field :encrypted_password %>


  <%= f.submit '変更' %>

<% end %>

<h4><%= link_to '退会する方はこちら', customers_unsubscribe_path %></h4>


<%#= form_with model: @customer, url: edit_customer_registration_path, local: true do |f| %>
  <%#= render "publics/shared/error_messages", resource: resource %>

  <div class="field">
    <%#= f.label :email %><br />
    <%#= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <%# if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><!--Currently waiting confirmation for: <%#= resource.unconfirmed_email %></div>
  <%# end %>

  <div class="field">
    <%#= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%#= f.password_field :password, autocomplete: "new-password" %>
    <%# if @minimum_password_length %>
      <br />
      <em><%#= @minimum_password_length %> characters minimum</em>
    <%# end %>
  </div>

  <div class="field">
    <%#= f.label :password_confirmation %><br />
    <%#= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%#= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%#= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%#= f.submit "Update" %>
  </div>
<%# end %>

<h3>Cancel my account</h3>

<div>Unhappy? <%#= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

<%#= link_to "Back", :back %>
