
<h2>服用チェック表</h2>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dosage_record_sheet.each do |t| %>
      <tr>
        <td><%= t.title %></td>
        <td><%= t.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%#= link_to '詳細', t %></td>
        <td><%= link_to '編集', edit_dosage_record_sheet_path(t.id) %></td>
        <td><%= link_to '削除', dosage_record_sheet_path(t.id), method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'カレンダーを書く', new_dosage_record_sheet_path %>

<%= month_calendar events: @dosage_record_sheet do |date, dosage_record_sheet| %>
  <%= date.day %>

  <% dosage_record_sheet.each do |dosage_record_sheet| %>
    <div>
      <%= link_to dosage_record_sheet.title, dosage_record_sheet %>
    </div>
  <% end %>
<% end %>